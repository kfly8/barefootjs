{
  "name": "barefootjs",
  "version": "0.0.1",
  "description": "JSX to static HTML + client JS compiler",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "ui",
    "docs/ui"
  ],
  "scripts": {
    "test": "bun test --cwd . packages/",
    "build": "bun run --filter '*' build"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.0.11",
    "@playwright/test": "^1.57.0",
    "@types/bun": "latest",
    "happy-dom": "^20.0.11",
    "typescript": "^5.9.3"
  }
}
