{
  "name": "barefootjs",
  "version": "0.0.1",
  "description": "JSX to Marked Template + client JS compiler",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "ui",
    "site/shared",
    "site/ui",
    "site/core"
  ],
  "scripts": {
    "setup": "bun install && bun run --filter 'barefootjs-echo-example' setup",
    "build": "bun run --filter '@barefootjs/dom' build && bun run --filter '@barefootjs/jsx' build && bun run --filter '@barefootjs/hono' --filter '@barefootjs/go-template' build && bun run --filter '*' build",
    "test": "bun test --cwd . packages/",
    "test:e2e": "bun run --filter '*' test:e2e",
    "clean": "bun run --filter '*' clean",
    "meta:extract": "bun run packages/cli/src/index.ts meta:extract",
    "barefoot": "bun run packages/cli/src/index.ts"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.0.11",
    "@playwright/test": "^1.57.0",
    "@types/bun": "latest",
    "happy-dom": "^20.0.11",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "shiki": "^3.21.0"
  }
}
