{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "@barefootjs/hono/jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./dist/components/*"]
    }
  },
  "include": ["*.ts", "*.tsx", "components/**/*.ts", "components/**/*.tsx", "e2e/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
