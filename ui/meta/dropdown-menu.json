{
  "name": "dropdown-menu",
  "title": "Dropdown Menu",
  "category": "overlay",
  "description": "DropdownMenu Components An action menu triggered by a button, avatar, or any element. Inspired by shadcn/ui DropdownMenu with CSS variable theming support. State management uses createContext/useContext for parent-child communication. Root DropdownMenu manages open state, children consume via context. Features: - ESC key to close - Arrow key navigation - Accessibility (role=\"menu\", role=\"menuitem\") - Submenu support with hover/keyboard navigation - CheckboxItem for multi-select - RadioGroup/RadioItem for single-select - Destructive variant for dangerous actions",
  "tags": [
    "stateful",
    "multi-component",
    "portal",
    "context",
    "aria"
  ],
  "stateful": true,
  "props": [
    {
      "name": "open",
      "type": "boolean",
      "required": false,
      "description": "Whether the dropdown menu is open"
    },
    {
      "name": "onOpenChange",
      "type": "(open: boolean) => void",
      "required": false,
      "description": "Callback when open state should change"
    },
    {
      "name": "children",
      "type": "Child",
      "required": false,
      "description": "DropdownMenuTrigger and DropdownMenuContent"
    }
  ],
  "subComponents": [
    {
      "name": "DropdownMenuTrigger",
      "description": "Props for DropdownMenuTrigger component.",
      "props": [
        {
          "name": "disabled",
          "type": "boolean",
          "required": false,
          "description": "Whether disabled"
        },
        {
          "name": "asChild",
          "type": "boolean",
          "required": false,
          "description": "Render child element as trigger instead of built-in button"
        },
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "Trigger content (any element: button, avatar, icon, etc.)"
        }
      ]
    },
    {
      "name": "DropdownMenuContent",
      "description": "Props for DropdownMenuContent component.",
      "props": [
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "DropdownMenuItem, DropdownMenuLabel, DropdownMenuSeparator components"
        },
        {
          "name": "align",
          "type": "'start' | 'end'",
          "required": false,
          "description": "Alignment relative to trigger"
        }
      ]
    },
    {
      "name": "DropdownMenuItem",
      "description": "Props for DropdownMenuItem component.",
      "props": [
        {
          "name": "disabled",
          "type": "boolean",
          "required": false,
          "description": "Whether disabled"
        },
        {
          "name": "onSelect",
          "type": "() => void",
          "required": false,
          "description": "Callback when item is selected (menu auto-closes)"
        },
        {
          "name": "variant",
          "type": "'default' | 'destructive'",
          "required": false,
          "description": "Visual variant"
        },
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "Item content (text, icons, shortcuts)"
        }
      ]
    },
    {
      "name": "DropdownMenuCheckboxItem",
      "description": "Props for DropdownMenuCheckboxItem component.",
      "props": [
        {
          "name": "checked",
          "type": "boolean",
          "required": false,
          "description": "Whether the checkbox is checked"
        },
        {
          "name": "onCheckedChange",
          "type": "(checked: boolean) => void",
          "required": false,
          "description": "Callback when checked state changes"
        },
        {
          "name": "disabled",
          "type": "boolean",
          "required": false,
          "description": "Whether disabled"
        },
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "Item content"
        }
      ]
    },
    {
      "name": "DropdownMenuRadioGroup",
      "description": "Props for DropdownMenuRadioGroup component.",
      "props": [
        {
          "name": "value",
          "type": "string",
          "required": false,
          "description": "Currently selected value"
        },
        {
          "name": "onValueChange",
          "type": "(value: string) => void",
          "required": false,
          "description": "Callback when value changes"
        },
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "RadioItem children"
        }
      ]
    },
    {
      "name": "DropdownMenuRadioItem",
      "description": "Props for DropdownMenuRadioItem component.",
      "props": [
        {
          "name": "value",
          "type": "string",
          "required": true,
          "description": "Value for this radio item"
        },
        {
          "name": "disabled",
          "type": "boolean",
          "required": false,
          "description": "Whether disabled"
        },
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "Item content"
        }
      ]
    },
    {
      "name": "DropdownMenuSub",
      "description": "Props for DropdownMenuSub component.",
      "props": [
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "SubTrigger and SubContent"
        }
      ]
    },
    {
      "name": "DropdownMenuSubTrigger",
      "description": "Props for DropdownMenuSubTrigger component.",
      "props": [
        {
          "name": "disabled",
          "type": "boolean",
          "required": false,
          "description": "Whether disabled"
        },
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "Trigger content"
        }
      ]
    },
    {
      "name": "DropdownMenuSubContent",
      "description": "Props for DropdownMenuSubContent component.",
      "props": [
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "SubContent items"
        }
      ]
    },
    {
      "name": "DropdownMenuLabel",
      "description": "Props for DropdownMenuLabel component.",
      "props": [
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "Label text"
        }
      ]
    },
    {
      "name": "DropdownMenuSeparator",
      "description": "Props for DropdownMenuSeparator component.",
      "props": []
    },
    {
      "name": "DropdownMenuShortcut",
      "description": "Props for DropdownMenuShortcut component.",
      "props": [
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "Shortcut text (e.g., \"Ctrl+Q\")"
        }
      ]
    },
    {
      "name": "DropdownMenuGroup",
      "description": "Props for DropdownMenuGroup component.",
      "props": [
        {
          "name": "children",
          "type": "Child",
          "required": false,
          "description": "Grouped menu items"
        }
      ]
    }
  ],
  "examples": [
    {
      "title": "Basic dropdown menu",
      "code": "const [open, setOpen] = createSignal(false)\n\n<DropdownMenu open={open()} onOpenChange={setOpen}>\n  <DropdownMenuTrigger>\n    <span>Open Menu</span>\n  </DropdownMenuTrigger>\n  <DropdownMenuContent>\n    <DropdownMenuLabel>My Account</DropdownMenuLabel>\n    <DropdownMenuSeparator />\n    <DropdownMenuItem onSelect={() => {}}>Settings</DropdownMenuItem>\n    <DropdownMenuItem onSelect={() => {}}>Log out</DropdownMenuItem>\n  </DropdownMenuContent>\n</DropdownMenu>"
    }
  ],
  "accessibility": {
    "role": "menu, menuitem, menuitemcheckbox, group, menuitemradio, separator",
    "ariaAttributes": [
      "aria-expanded",
      "aria-haspopup",
      "aria-disabled",
      "aria-checked"
    ],
    "dataAttributes": [
      "data-slot",
      "data-state"
    ]
  },
  "dependencies": {
    "internal": [],
    "external": [
      "@barefootjs/dom"
    ]
  },
  "related": [
    "popover",
    "select"
  ],
  "source": "ui/components/ui/dropdown-menu.tsx"
}
