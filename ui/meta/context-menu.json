        {
          "name": "disabled",
          "type": "boolean",
          "required": false,
          "description": "Whether disabled"
        },
        {
          "name": "onSelect",
          "type": "() => void",
          "required": false,
          "description": "Callback when item is selected (menu auto-closes)"
        },
        {
          "name": "variant",
          "type": "'default' | 'destructive'",
          "required": false,
          "description": "Visual variant"
        },
