{
  "name": "textarea",
  "title": "Textarea",
  "category": "input",
  "description": "Textarea Component A styled multi-line text input component with error state support. Inspired by shadcn/ui with CSS variable theming support.",
  "tags": [
    "aria"
  ],
  "stateful": false,
  "props": [
    {
      "name": "error",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Whether the textarea is in an error state."
    },
    {
      "name": "describedBy",
      "type": "string",
      "required": false,
      "description": "ID of the element that describes this textarea (for accessibility)."
    }
  ],
  "examples": [
    {
      "title": "Basic usage",
      "code": "<Textarea placeholder=\"Type your message here.\" />"
    },
    {
      "title": "With value binding",
      "code": "<Textarea value={message()} onInput={(e) => setMessage(e.target.value)} />"
    },
    {
      "title": "With error state",
      "code": "<Textarea error describedBy=\"error-message\" />"
    }
  ],
  "accessibility": {
    "ariaAttributes": [
      "aria-invalid",
      "aria-describedby"
    ],
    "dataAttributes": [
      "data-slot"
    ]
  },
  "dependencies": {
    "internal": [],
    "external": []
  },
  "related": [
    "input",
    "label"
  ],
  "source": "ui/components/ui/textarea/index.tsx"
}
