{
  "name": "separator",
  "title": "Separator",
  "category": "layout",
  "description": "Separator Component A visual divider that separates content horizontally or vertically. Can be decorative (no semantic meaning) or act as a true separator with appropriate ARIA role and orientation.",
  "tags": [
    "aria"
  ],
  "stateful": false,
  "props": [
    {
      "name": "orientation",
      "type": "SeparatorOrientation",
      "required": false,
      "default": "horizontal",
      "description": "The orientation of the separator."
    },
    {
      "name": "decorative",
      "type": "boolean",
      "required": false,
      "default": "true",
      "description": "Whether the separator is purely decorative (no semantic meaning). When false, renders with role=\"separator\" and aria-orientation."
    },
    {
      "name": "className",
      "type": "string",
      "required": false,
      "description": "Additional CSS classes."
    }
  ],
  "variants": {
    "SeparatorOrientation": [
      "horizontal",
      "vertical"
    ]
  },
  "examples": [
    {
      "title": "Horizontal separator",
      "code": "<Separator />"
    },
    {
      "title": "Vertical separator",
      "code": "<Separator orientation=\"vertical\" />"
    },
    {
      "title": "Semantic separator",
      "code": "<Separator decorative={false} />"
    }
  ],
  "accessibility": {
    "role": "separator, decorative",
    "ariaAttributes": [
      "aria-orientation"
    ],
    "dataAttributes": [
      "data-slot",
      "data-orientation"
    ]
  },
  "dependencies": {
    "internal": [],
    "external": []
  },
  "related": [
    "card"
  ],
  "source": "ui/components/ui/separator.tsx"
}
