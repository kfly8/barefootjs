{
  "name": "toggle",
  "title": "Toggle",
  "category": "input",
  "description": "Toggle Component A two-state button that can be either on or off. Supports both controlled and uncontrolled modes. Inspired by shadcn/ui with CSS variable theming support.",
  "tags": [
    "stateful",
    "aria"
  ],
  "stateful": true,
  "props": [
    {
      "name": "defaultPressed",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Default pressed state (for uncontrolled mode)."
    },
    {
      "name": "pressed",
      "type": "boolean",
      "required": false,
      "description": "Controlled pressed state. When provided, component is in controlled mode."
    },
    {
      "name": "variant",
      "type": "ToggleVariant",
      "required": false,
      "default": "default",
      "description": "Visual variant of the toggle."
    },
    {
      "name": "size",
      "type": "ToggleSize",
      "required": false,
      "default": "default",
      "description": "Size of the toggle."
    },
    {
      "name": "onPressedChange",
      "type": "(pressed: boolean) => void",
      "required": false,
      "description": "Callback when the pressed state changes."
    },
    {
      "name": "children",
      "type": "Child",
      "required": false,
      "description": "Children to render inside the toggle."
    }
  ],
  "variants": {
    "ToggleVariant": [
      "default",
      "outline"
    ],
    "ToggleSize": [
      "default",
      "sm",
      "lg"
    ]
  },
  "examples": [
    {
      "title": "Uncontrolled (internal state)",
      "code": "<Toggle>Bold</Toggle>\n<Toggle defaultPressed>Italic</Toggle>"
    },
    {
      "title": "Controlled (external state)",
      "code": "<Toggle pressed={isBold} onPressedChange={setIsBold}>Bold</Toggle>"
    },
    {
      "title": "With variant",
      "code": "<Toggle variant=\"outline\">Outline</Toggle>"
    }
  ],
  "accessibility": {
    "ariaAttributes": [
      "aria-invalid",
      "aria-pressed"
    ],
    "dataAttributes": [
      "data-state",
      "data-slot"
    ]
  },
  "dependencies": {
    "internal": [],
    "external": [
      "@barefootjs/dom"
    ]
  },
  "related": [
    "button",
    "switch",
    "toggle-group"
  ],
  "source": "ui/components/ui/toggle.tsx"
}
